{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "eqeqeq": "error",
    "no-debugger": "error",
    "no-duplicate-imports": "error"
  },
  "plugins": {
    "typescript": true,
    "unicorn": true,
    "import": true
  },
  "ignorePatterns": ["**/*.svelte", "node_modules", ".svelte-kit", "build", "dist"]
}
